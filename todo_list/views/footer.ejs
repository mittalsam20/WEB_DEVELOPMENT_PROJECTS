<script>
    var old_pos = window.pageYOffset;
    window.onscroll = function() {
        var new_Pos = window.pageYOffset;
        if (old_pos > new_Pos) {
            document.getElementById("updown").style.top = "0";
        } else {
            document.getElementById("updown").style.top = "-77px";
        }
        old_pos = new_Pos;
    }
    if (window.history.replaceState) {
        window.history.replaceState(null, null, window.location.href);
    }
</script>

